{
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": false,
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false
  }
}
